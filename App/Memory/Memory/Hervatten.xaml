<Window x:Class="Memory.Hervatten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory"
        mc:Ignorable="d"
        Title="Hervatten" Height="240" Width="600">
    <Grid>
        <Label Content="Wilt u uw vorige spel hervatten?" HorizontalAlignment="Center" Margin="130,64,130,0" VerticalAlignment="Top" FontSize="18" Grid.ColumnSpan="2"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Ja" HorizontalAlignment="Center"  Padding="16,4" Margin="0,24" VerticalAlignment="Bottom" FontSize="18" Click="jaHervatten"/>
            <Button Grid.Column="1" Content="Nee" HorizontalAlignment="Center"  Padding="16,4" Margin="0,24" VerticalAlignment="Bottom" FontSize="18" Click="neeHervatten"/>
        </Grid>
    </Grid>
</Window>
