<Page x:Class="Memory.Giveup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Memory"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="You sure you want to give-up?">

    <Grid x:Name="Giveup_page" Background="White">
        <Label Content="Weet u zeker dat U wilt opgeven?" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Grid Margin="225,295,235,39">
            <Button Content="Ja" HorizontalAlignment="Center" Margin="13,70,235,12" Padding="16,4,16,4" VerticalAlignment="Center" FontSize="18" Width="92" Click="giveup_Yes"/>
            <Button Content="Nee" HorizontalAlignment="Center" Margin="233,70,15,12" Padding="16,4,16,4" VerticalAlignment="Center" FontSize="18" Width="92" Click="giveup_No"/>
        </Grid>
    </Grid>
</Page>
